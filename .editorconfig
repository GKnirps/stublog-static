root = true

[*]
charset = utf-8

end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[compress.makefile]
indent_style = tab

[*.md]
# trailing whitespaces mark hard line breaks in markdown
# the same could also be achieved with \, but better make sure
# editors know this
trim_trailing_whitespace = false
